<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:buttons="clr-namespace:RapidDeskToolkit.UIPackage.Controls.Buttons">

    <!-- Add Styles Here -->
    <Style Selector="buttons|IconButton.image > Grid > Grid#PartImage">
        <Setter Property="IsVisible" Value="True" />
    </Style>
    <Style Selector="buttons|IconButton.image > Grid > TextBlock#PartText">
        <Setter Property="IsVisible" Value="False" />
    </Style>

    <Style Selector="buttons|IconButton.text > Grid > Grid#PartImage">
        <Setter Property="IsVisible" Value="False" />
    </Style>
    <Style Selector="buttons|IconButton.text > Grid > Image#PartText">
        <Setter Property="IsVisible" Value="True" />
    </Style>
</Styles>